.list {
  position: relative;
  width: 85%;
  margin: 2.5%;
  padding: 5%;
  border-radius: 15rpx;
  box-shadow: 2px 2px 5px #888;
  font-size: 28rpx;
  color: #555;
}
.list .pic {
    width: 100%;
}
.addCom {
  position: fixed;
  right: 50rpx;
  bottom: 150rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  background-color: #1eb2a6;
  line-height: 100rpx;
}
.addCom .icon {
    margin-left: 25rpx;
    color: #fff;
    font-size: 50rpx;
